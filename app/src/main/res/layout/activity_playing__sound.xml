<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Playing_Sound">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Play"
        android:textColor="@color/IndianRed"
        android:id="@+id/button_play"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/LightGreen"
        android:textSize="30sp"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:onClick="playMusic" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/button_pause"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:textColor="@color/YellowGreen"
        android:textAllCaps="false"
        android:backgroundTint="@color/IndianRed"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/button_play"
        android:layout_centerHorizontal="true"
        android:onClick="pauseMusic" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loop Mode"
        android:textColor="@color/MediumVioletRed"
        android:textSize="25sp"
        android:switchMinWidth="60dp"
        android:switchPadding="10dp"
        android:shadowColor="@color/slider3button"
        android:id="@+id/switch_looping"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:checked="false"/>

</RelativeLayout>