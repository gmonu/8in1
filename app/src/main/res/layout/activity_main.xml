<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewvertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Button And Toast"
                android:background="@drawable/text_background"
                android:textSize="25sp"
                android:id="@+id/textView1"
                />

            <Button
                android:id="@+id/b1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/b1"
                android:drawablePadding="2dp"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                android:layout_marginBottom="10dp"
                android:text="Click Here" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_background"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Clickable List"
                android:textSize="25sp"
                android:id="@+id/textView2"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Click Here"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/b2"
                android:background="@drawable/rounded_button"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/b2"
                android:drawablePadding="2dp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Different Layouts"
                android:background="@drawable/text_background"
                android:textSize="25sp"
                android:id="@+id/textView3"

                />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Click Here"
                android:textAllCaps="false"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/b3"
                android:background="@drawable/rounded_button"
                android:drawableLeft="@drawable/b3"
                android:drawablePadding="2dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@drawable/text_background"
                android:text="Playing Sound"
                android:id="@+id/textView4"
                android:textSize="25sp"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Click Here"
                android:background="@drawable/rounded_button"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/b4"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/b4"
                android:drawablePadding="2dp"
                android:layout_gravity="center_horizontal"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:background="@drawable/text_background"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Background Changer"
                android:id="@+id/textView5"
                android:textSize="25sp"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Click Here"
                android:textAllCaps="false"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/b5"
                android:background="@drawable/rounded_button"
                android:drawableLeft="@drawable/b5"
                android:drawablePadding="2dp"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/text_background"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Image Color Changer"
                android:id="@+id/textView6"
                android:textSize="25sp"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/b6"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/b6"
                android:drawablePadding="2dp"

                android:layout_gravity="center_horizontal"
                android:text="Click Here" />
            <TextView
                android:layout_width="wrap_content"
                android:background="@drawable/text_background"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Inbuilt Web Pages"
                android:id="@+id/textView7"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:background="@drawable/rounded_button"
                android:id="@+id/b7"
                android:textAllCaps="false"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/b7"
                android:drawablePadding="2dp"
                android:layout_gravity="center_horizontal"
                android:text="CLick Here" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"

                android:textColor="@color/black"
                android:background="@drawable/text_background"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Activity Switcher"
                android:id="@+id/textView8"
                android:textSize="25sp"
                />

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/b8"
                android:drawablePadding="2dp"
                android:background="@drawable/rounded_button"
                android:layout_gravity="center_horizontal"
                android:id="@+id/b8"
                android:textAllCaps="false"

                android:text="Click Here" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>